# ------------------------------------------------------------------------------
#  This file helps maintain consistent code style across various text editors
#  and IDEs.
#
#  For more information, visit https://editorconfig.org
# ------------------------------------------------------------------------------

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{css,scss,js}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
